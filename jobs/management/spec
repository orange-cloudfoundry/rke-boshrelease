---
name: management
packages:
- rke
templates:
  config/bpm.yml: config/bpm.yml
  cluster-config.yml.erb: config/cluster-config.yml
  pre-start.erb: bin/pre-start
  post-start.erb: bin/post-start  
  pre-stop.erb: bin/pre-stop
  post-deploy.erb: bin/post-deploy
  config/id_rsa.erb: config/id_rsa
  run.erb: bin/run
consumes:
- name: master
  type: master
  optional: false
  
- name: worker
  type: worker
  optional: false
properties:
  rke.ssh_private_key:
    description: id_rsa private key (same for all rke bosh deployment vm, associated with rke linux account)
  rke.ssh_port:
    description: ssh listen port on worker and master vms
    default: 22

    
  

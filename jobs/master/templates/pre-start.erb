#!/bin/bash

#map disk access to bosh persistent disk location
ln -sf /etc/kubernetes/ssl /var/vcap/store/master/etc/kubernetes/ssl
ln -sf /var/lib/etcd /var/vcap/store/master/var/lib/etcd
ln -sf /etc/cni /var/vcap/store/master /etc/cni
ln -sf /opt/cni /var/vcap/store/master/opt/cni
ln -sf /var/run/calico /var/vcap/store/master/var/run/calico

#configure sshd and let it update
echo "   AllowTcpForwarding yes" >> /etc/ssh/ssh_config
sudo kill -SIGHUP $(pgrep -f "sshd -D")

exit 0;
